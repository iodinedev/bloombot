generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Glossary {
  term       String   @unique
  search     String   @unique
  definition String   @db.VarChar(1024)
  usage      String
  links      String[]
  category   String
  aliases    String[]
}

model Meditations {
  id    Int    @id @default(autoincrement())
  session_user  String
  occurred_at  DateTime  @default(now())
  session_time  Int
  session_guild String
}

model Stars {
  id               Int    @id @default(autoincrement())
  messageID        String @unique
  embedID          String @unique
  messageChannelID String
}

model SteamKeys {
  key  String  @unique
  reserved String?
  used Boolean
}

model QuoteBook {
  id    Int    @id @default(autoincrement())
  quote String
  author String @default("Anonymous")
  date  DateTime  @default(now())
}

model Courses {
  id   Int    @id @default(autoincrement())
  name  String @unique
  search  String @unique
  participant_role String
  graduate_role String
  guild String
  date DateTime  @default(now())
}

model CommandUsage {
  id    Int    @id @default(autoincrement())
  command String
  user String
  guild String
  date DateTime  @default(now())
}