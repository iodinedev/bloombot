generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Glossary {
  id         String   @id
  term       String   @unique
  search     String   @unique
  definition String
  usage      String
  links      String[]
  category   String
  aliases    String[]
}

model Meditations {
  id            String   @id
  session_user  String
  occurred_at   DateTime @default(now())
  session_time  Int
  session_guild String
}

model Stars {
  id               String @id
  messageID        String @unique
  embedID          String @unique
  messageChannelID String
}

model SteamKeys {
  key      String  @unique
  reserved String?
  used     Boolean
}

model QuoteBook {
  id     String   @id
  quote  String
  author String   @default("Anonymous")
  date   DateTime @default(now())
}

model Courses {
  id               String   @id
  name             String   @unique
  search           String   @unique
  participant_role String
  graduate_role    String
  guild            String
  date             DateTime @default(now())
}

model CommandUsage {
  id      String   @id
  command String
  user    String
  guild   String
  date    DateTime @default(now())
}
